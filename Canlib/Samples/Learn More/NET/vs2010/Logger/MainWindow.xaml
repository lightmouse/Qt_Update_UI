<Window x:Class="Logger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="337" Width="519">
    <Grid>
        <Label Content="Channel" Height="23" HorizontalAlignment="Left" Margin="5,5,0,0" Name="channelLabel" VerticalAlignment="Top" Width="55" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,34,0,0" Name="channelBox" VerticalAlignment="Top" Width="48" />
        <Button Content="Initialize" Height="23" HorizontalAlignment="Left" Margin="66,34,0,0" Name="InitializeButton" VerticalAlignment="Top" Width="75" Click="InitializeButton_Click" />
        
        <Label Content="File:" Height="28" HorizontalAlignment="Left" Margin="180,12,0,0" Name="fileLabel" VerticalAlignment="Top" />
        <Button Content="Select file" Height="23" HorizontalAlignment="Left" Margin="180,34,0,0" Name="SelectFileButton" VerticalAlignment="Top" Width="75" Click="SelectFileButton_Click" />
        <Label Content="None selected" Height="28" HorizontalAlignment="Left" Margin="208,12,0,0" Name="fileNameLabel" VerticalAlignment="Top" />

        <Label Content="Received messages:" Height="28" HorizontalAlignment="Left" Margin="12,78,0,0" Name="label1" VerticalAlignment="Top" Width="115" />
        <RichTextBox Height="188" HorizontalAlignment="Left" Margin="12,99,0,0" Name="OutputBox" VerticalAlignment="Top" Width="479" />
    </Grid>
</Window>
